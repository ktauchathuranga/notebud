# MongoDB init (used by docker-compose to initialize the mongo container)
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=SuperSecret123!
MONGO_INITDB_DATABASE=notes_app

# App / DB connection (read by PHP from .env)
DB_HOST=mongo
DB_PORT=27017
DB_NAME=notes_app
DB_USER=root
DB_PASS=SuperSecret123!

# JWT secret used to sign tokens. Replace with a long random value in production.
# You can generate one with: openssl rand -hex 32
JWT_SECRET=3f2d9e4b6c8a1f0e5d2c7b9a8e6f1c3d4b7a9e0f6d2c4b8a9e0f1d2c3b4a5e6

# Set to true in production when serving over HTTPS so cookies are marked Secure
COOKIE_SECURE=false
