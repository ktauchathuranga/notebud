# .env.cloud - For using MongoDB Atlas
# Copy this to .env when you want to use cloud database

# Atlas settings (these will be ignored when MONGODB_URI is set)
DB_HOST=cluster0.xxxxx.mongodb.net
DB_PORT=27017
DB_NAME=
DB_USER=
DB_PASS=

# Docker MongoDB (still needed for container, but won't be used)
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=
MONGO_INITDB_DATABASE=

# MongoDB Atlas connection string (set this to use Atlas)
MONGODB_URI=

# JWT Secret (same as local for consistency)
JWT_SECRET=

# Security
COOKIE_SECURE=false

# Google reCAPTCHA keys
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
