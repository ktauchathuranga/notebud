# .env.cloud - For using MongoDB Atlas
# Copy this to .env when you want to use cloud database

# Atlas settings (these will be ignored when MONGODB_URI is set)
DB_HOST=cluster0.xxxxx.mongodb.net
DB_PORT=27017
DB_NAME=notebud
DB_USER=scratchpad_user
DB_PASS=your_atlas_password

# Docker MongoDB (still needed for container, but won't be used)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password
MONGO_INITDB_DATABASE=notebud

# MongoDB Atlas connection string (set this to use Atlas)
MONGODB_URI=no-its-not-here :)

# JWT Secret (same as local for consistency)
JWT_SECRET=your_very_long_random_secret_key_here

# Security
COOKIE_SECURE=false

# Google reCAPTCHA keys
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here
