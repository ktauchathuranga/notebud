# .env.local - For using Docker MongoDB
# Copy this to .env when you want to use local Docker database

# Local Docker MongoDB settings
DB_HOST=mongo
DB_PORT=27017
DB_NAME=notebud
DB_USER=root
DB_PASS=SuperSecret123

# MongoDB Docker container credentials
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=SuperSecret123
MONGO_INITDB_DATABASE=notebud

# Leave empty to use local MongoDB
MONGODB_URI=

# JWT Secret (generate a random string)
JWT_SECRET=3f2d9e4b6c8a1f0e5d2c7b9a8e6f1c3d4b7a9e0f6d2c4b8a9e0f1d2c3b4a5e6

# Security
COOKIE_SECURE=false

# Google reCAPTCHA keys
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here
