# .env.local - For using Docker MongoDB
# Copy this to .env when you want to use local Docker database

# Local Docker MongoDB settings
DB_HOST=mongo
DB_PORT=27017
DB_NAME=
DB_USER=
DB_PASS=

# MongoDB Docker container credentials
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=
MONGO_INITDB_DATABASE=

# Leave empty to use local MongoDB
MONGODB_URI=

# JWT Secret (generate a random string)
JWT_SECRET=

# Security
COOKIE_SECURE=false

# Google reCAPTCHA keys
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
